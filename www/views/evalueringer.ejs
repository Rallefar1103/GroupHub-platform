<!DOCTYPE html>
<html>
  <head>
    <%- include('meta/header') %> 
    <link href="css/design.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/elementlist.css">
    <script defer src="js/view-design.js"></script>
  </head>
  <body>
    <%- include('meta/navbar') %> 
    <div class="container" id="content">
      <div class="row">
        <div class="col-5">  
          <nav>
            <button class="btn btn-info">
              <a href="/upload/evalueringer"> Upload </a>
            </button>
          </nav> 
        </div>
        <div class="row">
          <div class="col-12">
            <h1> EVALUERINGER </h1>
            <form action="/evalueringer" method="POST">
              <p> Vælg det afsnit du ønsker at finde evalueringer til </p>
                <input type="text" id="section" name="section">
                <input type="submit">
            </form>
          </div>
        </div>
        <div class="col-10">
          <button id="design-evalueringer"> Tryk for design </button><br>
          <img id="design-evalueringerPage">
        </div>
        <section>
          <div class="row">
            <div class="col">
              <div class="quizzes">
                <h2> QUIZ </h2>
                <% Quizzes.forEach(element =>{ %>
                <a href="/evalueringer/<%= element.elementtype %>/<%= element.idquiz %>"> 
                  <div class="card">
                    <div class="elementType<%= element.elementtype %>">title: <%= element.title %></div>
                    <div>keywords:</div>
                    <div class="sectinKeywords"><%= element.keywords %> </div>
                    <div class="question"><%= element.question %></div>
                    
                </div>    
                </a>
                <% }) %>
              </div>
            </div>
            <div class="col">
              <div class="flashcards">
                <h2> FLASHCARDS </h2>
                <% Flashcards.forEach(element =>{ %>
                  <a href="/evalueringer/<%= element.elementtype %>/<%= element.idflashcard %>"> 
                    <div class="card">
                      <div class="elementType<%= element.elementtype %>">title: <%= element.title %></div>
                      <div>keywords:</div>
                      <div class="sectinKeywords"><%= element.keywords %> </div>
                      <div class="notion"><%= element.notion %></div>
                      
                  </div>    
                  </a>
                  <% }) %>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
    <%- include('meta/footer') %> 
  </body>
</html>