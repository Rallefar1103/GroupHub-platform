<!DOCTYPE html>
<html>
    <head>
        <%- include('meta/header') %> 
        <link href="css/design.css" rel="stylesheet">
        <link rel="stylesheet" href="../css/elementlist.css">
    </head>
    <body>
        <%- include('meta/navbar') %> 
        <div class="container" id="content">

            <div class="row">
                <div class="col-12">  
                    <nav>
                        <button class="btn btn-info" style="background-color:powderblue;">
                            <a href="/create/section">Create New Section</a>
                        </button>
                    </nav> 
                </div>
                <div class="col-12">
                    <h1> SECTIONS </h1>
                </div>
                <div class="section_list">
                    <%  if(data.section && data.section.length > 0) { data.section.forEach( (element) => { %>
                        <a href="/rapport/<%= element.iddocument_section %>" >
                            <div class="card">
                            <div class="elementType<%= element.elementtype %>">title: <%= element.title %></div>
                            <div>keywords:</div>
                            <div class="sectinKeywords"><%= element.keywords %> </div>
                            <div class="sectionContent"><%= element.teaser %></div>
                            </div>    
                        </a>
                    <% })}; %> 
                </div>
            </div>
                <div class="col-10">
                    <button id="design-rapport"> Tryk for design </button><br>
                    <img id="design-rapportPage">
                </div>
            <section>
                <div class="row">
                    
                </div>
            </section>
        </div>
    <%- include('meta/footer') %> 
  </body>
  <script src="js/view-design.js"></script>
</html>   