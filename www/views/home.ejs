<!DOCTYPE html>
<html>
    <head>
        <%- include('meta/header') %> 
        <title> GroupHub </title>
        <link href="/css/design.css" rel="stylesheet">
    </head>
    <body>
    <%- include('meta/navbar') %> 
    <div class="container" id="content">
      <div class="row">
        <div class="col">
          <div class="leftside">
            <h2> Oprettede Dokumenter </h2>
            <% data.documents.forEach((document) => { %>
              <p>
                <a href="view/sectionsAndEvaluations/document/<%= document.idDocument %>">
                  <strong><%= document.title %></strong>
                </a>
              </p>
            <% }); %>
            <button class="btn btn-info">
              <a href="/post/document"> Opret Dokument </a>
            </button>
          </div>
        </div>
        <div class="rightside">
          <%- include(`homeProgressBar`) %> 
          <h2> News Feed</h2>
            <!-- <a href="/view/spacedrepetition">der er opgaver til repetition</a> -->
            <% if (data.repetitionTask.length > 0 ) { %>
                <a href="/view/spacedrepetition">Der er <%= data.repetitionTask.length %> opgaver til repetition</a>
            <% } else { %>
              <p>Der er pt. ingen opgaver til repetetion</p>
            <% } %>
        </div>
      </div>  
    </div>
    <div class="unusedEvaluations">
      <h3>Du har ikke taget følgende evalueringer endnu:</h1>
        <ul>
          <% data.evaluationsNotYetTaken.forEach((evaluation, i) => { %>
            <li>
              <p style="display: inline;">
                <%= evaluation.EVALUATION_TITLE %> |
              </p>
              <p style="display: inline;">
                <a href="/view/evaluations/<%= evaluation.ID_EVALUATION %> ">Gå til denne evaluering</a>
              </p>
            </li>
          <% }) %>
        </ul>
    </div>
    <div class='footer'>
      <%- include('meta/footer') %>
    </div> 
  </body>
</html>